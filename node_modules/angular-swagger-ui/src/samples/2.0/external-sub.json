{
    "swagger": "2.0",
    "info": {
        "title": "Common definitions",
        "version": "1.0.0",
        "contact": {
            "name": "API support",
            "url": "https://www.orangepartner.com",
            "email": "somebody@orange.com"
        }
    },
    "paths": {},
    "definitions": {
        "error_def": {
            "description": "The whole error table should lie here (in GFM) ? ...",
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 9999,
                    "description": "An integer coding the error type. This is given to caller so he can translate them if required"
                },
                "message": {
                    "type": "string",
                    "description": "A short localized string that describes the error."
                },
                "description": {
                    "type": "string",
                    "description": "A long localized error description if needed. It can contain precise information about which parameter is missing, or what are the identifier acceptable values"
                },
                "infoURL": {
                    "type": "string",
                    "description": "A URL to online documentation that provides more information about the error"
                }
            },
            "required": [
                "code",
                "message"
            ],
            "example": {
                "code": 23,
                "message": "Missing body field",
                "description": "The field 'productionDate' is missing from posted body"
            }
        },
        "status_def": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "ok",
                        "ko"
                    ]
                },
                "version": {
                    "type": "string",
                    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
                },
                "components": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/status_def_compo"
                    }
                }
            },
            "example": {
                "name": "myproxy_v1",
                "status": "ok",
                "version": "1.0.9",
                "components": [
                    {
                        "status": "ok",
                        "version": "v1.1",
                        "name": "redis"
                    }
                ]
            },
            "required": [
                "name",
                "status",
                "version"
            ]
        },
        "status_def_compo": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "ok",
                        "ko"
                    ]
                },
                "version": {
                    "type": "string",
                    "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
                }
            },
            "required": [
                "name",
                "status",
                "version"
            ]
        }
    }
}